@{
    ViewData["Title"] = "Home Page";
}

@model InsuranceData

<form method="post" asp-controller="Inference" asp-action="Score">

    <div><label>Day:</label><input asp-for="Day" value="25" /></div>
    <div><label>Year:</label><input asp-for="Year" value="32.23" /></div>
    <div><label>Month</label><input asp-for="Month" value="1" /></div>
    <div><label>Intersection Related</label><input asp-for="Intersection_Related" value="0" /></div>
    <div><label>Teenage Driver Involved</label><input asp-for="Teenage_Driver_Involved" value="0" /></div>
    <div><label>Night/Dark</label><input asp-for="Night_Dark_Condition" value="0" /></div>
    <div><label>Single Vehicle</label><input asp-for="Single_Vehicle" value="1" /></div>
    <div><label>Milepoint</label><input asp-for="Milepoint" value="0" /></div>

    <button type="submit">Calculate</button>
</form>